(define (fakt n)
	(define (step_1 n)
		(ceiling(sqrt n))
	)
	(define (step_2 a n)
		(sqrt (- (expt a 2) n))
	)
	(define (step_3 a n)
		(define b (step_2 a n))
		(if (integer? b)
			(- a b)
			(step_3 (+ a 1) n)
		)
	)
	(if (even? n)
		2
		(step_3 (step_1 n) n)
	)
)
